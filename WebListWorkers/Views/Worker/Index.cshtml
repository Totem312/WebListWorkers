@model List<Worker>
@{
    ViewData["Title"] = "Index";
}
<link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet" />
<button class="create-button" onclick="location.href='https://localhost:7068/worker/create'">Создать нового сотрудника</button>


<table id="myTable">
    <thead>
        <tr>
            <th>Фотография</th>
            <th>ФИО</th>
            <th>Название отдела</th>
            <th>Номер телефона</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody id="employeesTableBody">
        @foreach (var employee in Model)
        {
                <tr>
                    <td><img src="@employee.Photo" alt="@employee.FullName" width="100" height="100"></td>
                    <td>@employee.FullName</td>
                    <td>@employee.DepartmentName</td>
                    <td>@employee.Phone</td>
                    <td>
                        <button class="edit-button" data-id="@employee.ID" onclick="location.href='https://localhost:7068/worker/Edit/'+@employee.ID">Редактировать</button>
                        <button class="delete-button" data-id="@employee.ID" onclick="location.href='https://localhost:7068/worker/Delete/'+@employee.ID">Удалить</button>
                    </td>
                </tr>
        }
    </tbody>
</table>
